# Find3D Material Search - 生产环境配置

# 应用配置
NODE_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_NAME="Find3D Material Search"

# API配置
VITE_API_BASE_URL=https://api.find3d.com
API_BASE_URL=https://api.find3d.com

# CDN配置
VITE_CDN_BASE_URL=https://cdn.find3d.com
CDN_BASE_URL=https://cdn.find3d.com

# 数据库配置
DATABASE_URL=postgresql://find3d:${POSTGRES_PASSWORD}@postgres:5432/find3d
POSTGRES_DB=find3d
POSTGRES_USER=find3d
# POSTGRES_PASSWORD 应该通过 Docker secrets 设置

# Redis配置
REDIS_URL=redis://redis-master:6379
REDIS_CLUSTER_ENABLED=true

# 安全配置
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# 监控配置
SENTRY_DSN=${SENTRY_DSN}
METRICS_ENDPOINT=https://metrics.find3d.com/collect
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# 爬虫配置
CRAWLER_MAX_CONCURRENT=5
CRAWLER_DEFAULT_DELAY=2000
CRAWLER_MAX_RETRIES=3
CRAWLER_TIMEOUT=30000
CRAWLER_RESPECT_ROBOTS_TXT=true

# 缓存配置
CACHE_DEFAULT_TTL=86400000
CACHE_MAX_SIZE=524288000
CACHE_CLEANUP_INTERVAL=3600000

# 性能配置
ENABLE_GZIP=true
ENABLE_BROTLI=true
ENABLE_SERVICE_WORKER=true
ENABLE_IMAGE_OPTIMIZATION=true

# 部署配置
DOCKER_REGISTRY=find3d
DEPLOY_TARGET=swarm
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_S3_BUCKET=find3d-backups
BACKUP_S3_REGION=us-east-1

# 域名配置
APP_DOMAIN=find3d.com
API_DOMAIN=api.find3d.com
CDN_DOMAIN=cdn.find3d.com
GRAFANA_DOMAIN=grafana.find3d.com

# SSL配置
SSL_CERT_PATH=/etc/ssl/certs/find3d.crt
SSL_KEY_PATH=/etc/ssl/private/find3d.key

# 日志配置
LOG_LEVEL=warn
ENABLE_ACCESS_LOG=true
ENABLE_ERROR_LOG=true
LOG_RETENTION_DAYS=30

# 功能标志
VITE_FEATURE_ENABLE_NEW_SEARCH_UI=true
VITE_FEATURE_ENABLE_ADVANCED_FILTERS=true
VITE_FEATURE_ENABLE_BULK_DOWNLOAD=false
VITE_FEATURE_ENABLE_USER_ACCOUNTS=false
VITE_FEATURE_ENABLE_PREMIUM_FEATURES=false
VITE_FEATURE_ENABLE_ANALYTICS=true
VITE_FEATURE_ENABLE_A11Y_FEATURES=true

# 外部服务配置
ELASTICSEARCH_HOST=elasticsearch.find3d.com
ELASTICSEARCH_PORT=9200
KIBANA_HOST=kibana.find3d.com

# 通知配置
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
EMAIL_SMTP_HOST=${EMAIL_SMTP_HOST}
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=${EMAIL_SMTP_USER}
EMAIL_SMTP_PASS=${EMAIL_SMTP_PASS}

# 限流配置
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX_REQUESTS=10
SEARCH_RATE_LIMIT_WINDOW_MS=60000

# 健康检查配置
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3

# 备份配置
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=us-east-1